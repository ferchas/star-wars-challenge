{
  "app": {
    "name": "Proyect Name",
    "cluster": true,
    "port": 8082,
    "portS": 8443,
    "lang": [
      "es",
      "en"
    ]
  },
  "api": {
    "host": "https://swapi.co",
    "basePath": "/api"
  },
  "webpack": {
    "minimize-css": true,
    "uglify-js": true,
    "public-path": "./public/",
    "entryPoint": "./client/index.js",
    "layout": {
      "fileName": "index.html",
      "template": "./client/index.html"
    },
    "bundles": {
      "js": "bundle.[name].[hash].js",
      "css": "bundle.[name].[hash].css"
    }
  }
}
